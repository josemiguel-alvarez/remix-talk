{
  "compilerOptions": {
    "module": "ES6",
    "jsx": "react-jsx",
    "checkJs": false,
    "moduleResolution": "node",
    "baseUrl": ".",
    "esModuleInterop": true,
    "isolatedModules": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": false,
    "lib": ["DOM", "DOM.Iterable", "ES2019"],
    "strict": true,
    "target": "ES2019"
  },
  "exclude": ["node_modules", "**/node_modules/*"],
  "include": ["app/**/*"]
}
